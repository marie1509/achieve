<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
    <tr>
        <th>タイトル</th>
        <th>内容</th>
    </tr>
    
  <% @vlogs.each do |vlog| %>
  <tr>
    <td><%= vlog.title %></td>
    <td><%= vlog.content %></td>
    <td><%= link_to '詳細を確認する', vlog_path(vlog.id) %></td> 　
    <td><%= link_to 'ブログを編集する', edit_vlog_path(vlog.id) %></td>
    <td><%= link_to 'ブログを削除する', vlog_path(vlog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  
<% end %>
    
    
</table>

<br>

<%= link_to '新しくブログを投稿する', new_vlog_path %>
