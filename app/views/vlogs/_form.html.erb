      <ul>

      <% @vlog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>




  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
