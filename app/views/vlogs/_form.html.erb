
<%= form_with(model: @vlog,url: choose_new_or_edit, local: true) do |form| %>
 <% if @vlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @vlog.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @vlog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<div class="create_blog">
  <div class="blog_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="blog_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="blog_image">
    <%= form.label :"画像を選択" %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>
  </br>
  <%= form.submit %>
</div>
<% end %>
