<div class="choose_profile">
<%= form_with(model: @user, local: true )do |f| %>
  <h3>Edit your profile information</h3>


  <div>
    <%= f.text_field :name, placeholder: 'Name' %>
  </div>

  <div>
    <%= f.email_field :email, placeholder: 'E-mail' %>
  </div>

  <div>
    <%= f.password_field :password, placeholder: 'New password' %>
  </div>

  <div>
    <%= f.password_field :password_confrimation, placeholder: 'Password confirmation' %>
  </div>
  </br>
  <div>
    <%= f.label :"プロフィール画像を選択" %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  </br>
  <div>
    <%= f.submit "Update my account" %>
  </div>
</div>
<% end %>
